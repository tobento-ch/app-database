{
    "name": "tobento/app-database",
    "type": "library",
    "description": "App database support.",
    "keywords": [
        "tobento",
        "package",
        "app",
        "database"
    ],
    "homepage": "https://www.tobento.ch",
    "license": "MIT",
    "authors": [
        {
            "name": "Tobias Strub",
            "email": "info@tobento.ch",
            "homepage": "https://www.tobento.ch"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "tobento/app": "^1.0.6",
        "tobento/app-migration": "^1.0",
        "tobento/service-migration": "^1.0",
        "tobento/service-database": "^1.1.1",
        "tobento/service-storage": "^1.1.9",
        "tobento/service-database-storage": "^1.0",
        "tobento/service-seeder": "^1.0.1",
        "tobento/service-dir": "^1.0"
    },  
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.0",
        "tobento/service-filesystem": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Tobento\\App\\Database\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tobento\\App\\Database\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --testdox --colors=always",
        "psalm": "vendor/bin/psalm"
    }
}